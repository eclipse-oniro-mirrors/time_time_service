{
  "name": "@ohos/time",
  "description": "Allowing apps to use OS time get/set functions",
  "version": "3.1",
  "license": "Apache License 2.0",
  "publishAs": "code-segment",
  "segment": {
    "destPath": "base/time/time_service"
  },
  "dirs": {},
  "scripts": {},
  "component": {
    "name": "time_service",
    "subsystem": "time",
    "syscap": [
      "SystemCapability.MiscServices.Time"
    ],
    "features": [
    ],
    "hisysevent_config": [
        "//base/time/time_service/hisysevent.yaml"
    ],
    "adapted_system_type": [
      "standard"
    ],
    "rom":"300KB",
    "ram":"1024KB",
    "deps": {
      "components": [
        "relational_store",
        "jsoncpp",
        "napi",
        "samgr",
        "common_event_service",
        "ipc",
        "eventhandler",
        "netmanager_base",
        "bundle_framework",
        "ability_base",
        "ability_runtime",
        "hiviewdfx_hilog_native",
        "libuv",
        "safwk",
        "c_utils",
        "access_token"
      ],
      "third_party": [
        "jsoncpp"
      ]
    },
    "build": {
      "group_type":{
        "base_group": [],
        "fwk_group":[
          "//base/time/time_service/interfaces/kits/js/napi/system_time:systemtime",
          "//base/time/time_service/interfaces/kits/js/napi/system_timer:systemtimer",
          "//base/time/time_service/interfaces/innerkits:time_client"
        ],
        "service_group":[
          "//base/time/time_service/etc/init:timeservice.cfg",
          "//base/time/time_service/profile:time_time_service_sa_profiles",
          "//base/time/time_service/services:time_service"
        ]
      },
      "inner_kits": [
        {
          "name": "//base/time/time_service/services:time_service",
          "header": {
            "header_files": [
              "itimer_info.h",
              "time_service_client.h"                                                               
            ],
            "header_base":"//base/time/time_service/interfaces/innerkits/include"
          }
        },
        {
          "name": "//base/time/time_service/interfaces/innerkits:time_client",
          "header": {
            "header_files": [
              "itimer_info.h",
              "time_service_client.h"
            ],
            "header_base":"//base/time/time_service/interfaces/innerkits/include"
          }
        }
      ],
      "test": [
        "//base/time/time_service/interfaces/kits/js/napi/system_time/test:unittest",
        "//base/time/time_service/interfaces/kits/js/napi/system_timer/test:unittest",
        "//base/time/time_service/services/time_manager/test:TimeServiceTest",
        "//base/time/time_service/test/fuzztest:fuzztest"
      ]
    }
  }
}
