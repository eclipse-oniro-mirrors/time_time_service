import("../../../../time.gni")

ohos_shared_library("systemdatetime") {
  include_dirs = [
    "../common/include",
    "../../../interfaces/inner_api/include",
    "include",
  ]

  configs = [ "${time_utils_path}:utils_config" ]

  cflags = [
    "-fPIC",
    "-g3",
  ]

  sources = [
    "../common/src/napi_utils.cpp",
    "../common/src/napi_work.cpp",
    "src/date_time_init.cpp",
    "src/napi_system_date_time.cpp",
  ]

  deps = [ "${api_path}:time_client" ]

  external_deps = [
    "ability_runtime:abilitykit_native",
    "ability_runtime:wantagent_innerkits",
    "c_utils:utils",
    "hilog:libhilog",
    "init:libbegetutil",
    "napi:ace_napi",
  ]
  branch_protector_ret = "pac_ret"
  sanitize = {
    integer_overflow = true
    ubsan = true
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
    debug = time_sanitize_debug
  }
  relative_install_dir = "module"
  subsystem_name = "time"
  part_name = "time_service"
}
